# frontend/Dockerfile

# Build stage
FROM node:18-alpine AS build
WORKDIR /app

# copy package json and lockfile
COPY package*.json ./

# install deps
RUN npm install

# copy rest of source
COPY . .

# build production assets
# If your frontend build outputs to "dist" use the command below.
# If it outputs to "build", change the path in the final COPY.
RUN npm run build

# Production stage (nginx)
FROM nginx:alpine
# copy built files from build stage to nginx html dir
COPY --from=build /app/dist /usr/share/nginx/html

# expose default nginx port
EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
